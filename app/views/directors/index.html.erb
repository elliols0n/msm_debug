<div class="page-header">
  <h1>Directors</h1>
</div>

<p><a href="/directors/new_form" class="btn btn-primary">Add a New Director</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Dob</th>
      <th>Name</th>
      <th>Bio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  
  <% @list_of_directors.each do |the_director| %>
  <tbody>
      <tr>
        <td><img src="<% the_director.image_url %>" width="80"></td>
        <td><%= the_director.dob %></td>
        <td><%= the_director.name %></td>
        <td><%= truncate(the_director.bio) %></td>
        <td>
          <a href="/directors/<%= the_director.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/directors/<%= the_director.id %>/edit_form" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_director/<%= @director_id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

